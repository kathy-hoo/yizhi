/* pages/profile/profile.wxss */
.bg{
  position: fixed;
  top: 0;
  left: -10%;
  width: 120%;
  height: 500rpx;
  background:#8bbd5e;
  border-radius: 0 0 1000% 1000%;
}
.userinfo{
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 230rpx;
  background: #8bbd5e;
  border: 2rpx solid #8bbd5e
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
}
.list{
  position: absolute;
  /* border:10rpx solid yellow; */
  /* box-sizing: border-box; */
  width: 60%;
  padding: 60rpx 40rpx;
  height: auto;
  top: 330rpx;
  background: #fff;
  border-radius: 25rpx;
  box-shadow: #cdcdcd .5px .5px 3px;
  margin: 0 15%;
  /* margin-bottom: 30px;
  padding: 30px 20px; */
}
.line{
  display:flex;
  flex-wrap:nowrap;
  align-items: center;
  height: 80rpx;
  /* border: #515151 solid 2rpx */
}
.label{
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.title{
  font-size: 35rpx;
  flex: 1 0 45%;
  /* color: #515151; */
}
.arrow{
  width: 30rpx;
  height: 30rpx;
}