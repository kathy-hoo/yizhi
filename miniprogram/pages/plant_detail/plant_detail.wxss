/* pages/plant_detail/plant_detail.wxss */
.planting{
  height: 400rpx;
  width: 100%
}
.head{
  display: flex;
  flex-direction: row;
  /* justify-content: space-evenly; */
  margin: 20rpx;
  background: white;
  border-radius: 25rpx;
  padding: 20rpx
}
.head view{
  display: flex;
  justify-content: center;
  align-items: center;
  /* text-align: center; */
  /* height: */
}
.device{
  font-size: 30rpx;
  width: 25%
}
.no{
  color: #cdcdcd
}
.yes{
  color: #8bbd5e;
}
.name{
  /* background: darkblue; */
  width:55%
}
.NO{
  /* background: darkblue; */
  width: 20%
}
.plantdetail{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  margin-top: 20rpx
}
.detail_item{
  width: 31%;
  background: white;
  margin-bottom:10rpx; 
  border-radius: 10rpx;
  border: solid 2rpx #8bbd5e
}
.title{
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  /* background: khaki */
}
.title image{
  width: 50rpx
}
.title text{
  font-size: 35rpx
}
.data{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #8bbd5e;
  font-size: 50rpx;
  padding-bottom: 20rpx
}
.data text{
  font-size: 30rpx;
  margin-top: 20rpx;
  margin-left: 10rpx
} 
.null{
  /* width: 100%; */
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* background: oldlace */
}
.img{
  width: 15%;
  /* background: darkblue */
}
.img image{
  width: 100%
}
.word{
  /* text-align: center; */
  font-size: 30rpx;
  color: #cdcdcd;
  /* background: saddlebrown */
}
.click{
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  /* margin-top: 30rpx */
}
.click view{
  color: #8bbd5e;
  border-bottom: 10rpx solid #8bbd5e
}
