.search_box{
  background: #8bbd5e;
  display: flex;
  flex-direction: row
}
.search{
  display: flex;
  flex-direction: row;
  border: 2rpx solid #8bbd5e;
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  width: 80%;
  align-items: center;
  padding: 10rpx 0
}
.clear{
  /* background: hotpink; */
  color: #fff;
  text-align: center;
  margin-top: 30rpx; 
}
.searchicon{
  margin:5rpx 10rpx 0 10rpx
}
